{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder:soft}/esp-idf/tools/idf.py",
                "clean"
            ],
            "options": {
                "env": {
                    "IDF_PATH": "${workspaceFolder:soft}/esp-idf"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder:soft}/esp-idf/tools/idf.py",
                "build"
            ],
            "options": {
                "env": {
                    "IDF_PATH": "${workspaceFolder:soft}/esp-idf"
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder:soft}/esp-idf/tools/idf.py",
                "-p",
                "${config:idf.port}",
                "flash"
            ],
            "options": {
                "env": {
                    "IDF_PATH": "${workspaceFolder:soft}/esp-idf"
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/esp-idf"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "monitor",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder:soft}/esp-idf/tools/idf.py",
                "-p",
                "${config:idf.port}",
                "monitor"
            ],
            "options": {
                "env": {
                    "IDF_PATH": "${workspaceFolder:soft}/esp-idf"
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder:soft}/esp-idf"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}